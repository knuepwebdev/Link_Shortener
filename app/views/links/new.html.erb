<% flash.each do |key, value| %>
  <%= content_tag :div, value.first["message"], class: "flash #{key}" %>
<% end %>

<%= form_for(@link) do |f| %>
  <div class="form-group">
    <label for="long_url">Enter URL</label>
    <%= f.text_field :long_url, { id: "url_input" } %>
  </div>
  <div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
